<%= form_with model: @product do |f| %>

   <div>
      <%= f.label :categories %>
      <%if Category.all == []%>
        No categories to display at the time. Add one!
      <%else%>
        <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
        <%=f.submit "Add Selected"%>
      <%end%>
<%end%>

   </div>
   <div>
     <%= form_tag(product_categories_path, :method => "post") do%>
     <%= label_tag(:name, "Add New Category") %>
     <%= text_field_tag :name %>
     <%= submit_tag("Create") %>
    <% end %>
  </div>

  