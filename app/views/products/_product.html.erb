<div class="card-deck">
  <div class="card" style="width: 18rem;">
    <%= image_tag "#{product.photoURL}", alt: "product image", class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to product.name, product_path(product) %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= number_to_currency(product.price) %></h6>
      <% if product.stock == 0 %>
        <p><a class="text-white bg-dark">Out of Stock</a></p>
      <% else %>
        <%= link_to "Add to cart", product_order_items_path(product), method: :post, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
