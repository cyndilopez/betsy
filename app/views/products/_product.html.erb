<section class="product">
  <ul>
    <li><%= image_tag "#{product.photoURL}" %></li>
    <li><h5><%= product.name %></h5></li>
    <li><%= product.description %></li>
    <li><%= product.price %></li>
  </ul>
  <%= link_to "Add to cart", product_order_items_path(product), method: :post, class: "btn btn-primary" %>
</section>
